<script>
    function login() {
        var username = $('#username').val();
        var password = $('#password').val();
        $.ajax({
            url: "http://localhost:3000/admin/login/processlogin",
            type: "POST",
            data: {
                username: username,
                password: password
            },
            success: function (result) {
                console.log(result);
                window.location.href = 'admin/dashboard/index';
            }
        });
        return false;
    }

    $(document).ready(function () {
        $('#loginForm').on('submit', function(e){
            e.preventDefault();
            login();
        });
    });
</script>